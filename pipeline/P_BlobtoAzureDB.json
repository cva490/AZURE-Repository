											"source": {
												"name": "Deposit Amount (INR )",
												"type": "String",
												"physicalType": "String"
											},
											"sink": {
												"name": "Deposit Amount (INR )",
												"type": "Decimal",
												"physicalType": "decimal",
												"scale": 10,
												"precision": 32
											}
										},
										{
											"source": {
												"name": "Balance (INR )",
												"type": "String",
												"physicalType": "String"
											},
											"sink": {
												"name": "Balance (INR )",
												"type": "Decimal",
												"physicalType": "decimal",
												"scale": 10,
												"precision": 32
											}
										}
