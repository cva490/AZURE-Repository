						"trgruntime": {
							"value": {
								"value": "@pipeline().TriggerTime",
								"type": "Expression"
							},
							"type": "DateTime"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "OPI_DMRO_Azure_DB_Connection",
					"type": "LinkedServiceReference"
				}
			},
