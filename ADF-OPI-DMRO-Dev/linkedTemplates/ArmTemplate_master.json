{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADF-OPI-DMRO-Dev"
		},
		"OPI_DMRO_Blob_Connection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'OPI_DMRO_Blob_Connection'"
		},
		"OPI_DMRO_Azure_DB_Connection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'OPI_DMRO_Azure_DB_Connection'"
		},
		"OPI_DMRO_Onpremise_SQL_Connection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'OPI_DMRO_Onpremise_SQL_Connection'"
		},
		"AzureKeyVaultConnection_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kypasswordvault.vault.azure.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADF-OPI-DMRO-Dev_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"OPI_DMRO_Blob_Connection_connectionString": {
						"value": "[parameters('OPI_DMRO_Blob_Connection_connectionString')]"
					},
					"OPI_DMRO_Azure_DB_Connection_connectionString": {
						"value": "[parameters('OPI_DMRO_Azure_DB_Connection_connectionString')]"
					},
					"OPI_DMRO_Onpremise_SQL_Connection_connectionString": {
						"value": "[parameters('OPI_DMRO_Onpremise_SQL_Connection_connectionString')]"
					},
					"AzureKeyVaultConnection_properties_typeProperties_baseUrl": {
						"value": "[parameters('AzureKeyVaultConnection_properties_typeProperties_baseUrl')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}